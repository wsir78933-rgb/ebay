{
  "version": 2,
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/ebay-webhook.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/monitor-sellers.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index"
    }
  ],
  "crons": [
    {
      "path": "/api/monitor-sellers",
      "schedule": "30 10 * * *"
    }
  ]
}
